AR     = @AR@
RANLIB = @RANLIB@
CC     = @CC@
CFLAGS = @CFLAGS@ -fPIC -I@srcdir@ @DEFS@
LIBS   = @LIBS@

prefix=@prefix@
exec_prefix=@exec_prefix@
LIBDIR = @libdir@

PKGCONFIGDIR = $(LIBDIR)/pkgconfig

ifdef DEBUG
CFLAGS += -DDEBUG=$(DEBUG) -g
endif

C4GH_LD_SONAME = #-Wl #,-soname,libcrypt4gh.so.2
C4GH_OBJECTS = payload.o header.o packet.o stream.o err.o crypt4gh.o

.PHONY: all clean install
.SUFFIXES: .c .o

all: libcrypt4gh.so libcrypt4gh.la

$(LIBDIR):
	@echo "Creating lib dir: $(LIBDIR)"
	@install -d $(LIBDIR)

libcrypt4gh.so: $(C4GH_OBJECTS)
	@echo "Linking objects into $@"
	@$(CC) -shared $(C4GH_LD_SONAME) -o $@ $(LIBS) $(C4GH_OBJECTS)

libcrypt4gh.la: $(C4GH_OBJECTS)
	$(AR) rv $@ $(C4GH_OBJECTS)
	$(RANLIB) $@

%.o: %.c
ifdef DEBUG
	@echo "Compiling $< (debug: $(DEBUG))"
else
	@echo "Compiling $<"
endif
	@$(CC) $(CFLAGS) -c -o $@ $<

install-so: libcrypt4gh.so | $(LIBDIR)
	@echo "Installing $< into $(LIBDIR)"
	@install -m 755 $< $(LIBDIR)

install-la: libcrypt4gh.la | $(LIBDIR)
	@echo "Installing $< into $(LIBDIR)"
	@install -m 755 $< $(LIBDIR)

install-pc: libcrypt4gh.pc | $(PKGCONFIGDIR)
	@echo "Installing $< into $(PKGCONFIGDIR)"
	@install -m 644 $< $(PKGCONFIGDIR)

install: install-so install-la install-pc

clean:
	-rm -f libcrypt4gh.so libcrypt4gh.la $(C4GH_OBJECTS)
	-@rm -f *~

distclean: clean
	-rm -f Makefile config.h* config.status configure config.log
	-rm -rf autom4te.cache .depend.old libcrypt4gh.pc

###################################
## Dependencies
###################################
depend: depend-rebuild
	rm -f .depend.bak

depend-rebuild:
	mv .depend .depend.old
	rm -f config.h .depend
	touch config.h .depend
	makedepend -w1000 -Y. -f .depend *.c 2>/dev/null
	(echo '# Automatically generated by makedepend.'; \
	 echo '# Run "make depend" to rebuild.'; sort .depend ) >.depend.tmp
	mv .depend.tmp .depend
	rm -f .depend.bak
	mv .depend.old .depend.bak
	rm -f config.h

depend-check: depend-rebuild
	cmp .depend .depend.bak || (echo .depend stale && exit 1)

# @DEPEND@
