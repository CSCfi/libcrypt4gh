CC     = @CC@
CFLAGS = @CFLAGS@ -I. -I@top_srcdir@/lib
LIBS   = -lsodium -L@top_srcdir@/lib -lcrypt4gh

prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR = @bindir@

ifdef DEBUG
CFLAGS += -DDEBUG=$(DEBUG) -g
endif

C4GH_HEADERS = passphrase.h key.h base64.h cli.h 
C4GH_SOURCES = passphrase.c key.c base64.c cli.c
C4GH_OBJECTS = $(C4GH_SOURCES:%.c=%.o)

.PHONY: all clean install
.SUFFIXES: .c .o

all: crypt4gh crypt4gh-keygen

@top_srcdir@/lib/libcrypt4gh.so:
	make -C @top_srcdir@/lib libcrypt4gh.so
#	make -C @top_srcdir@/lib install

crypt4gh: @top_srcdir@/lib/libcrypt4gh.so
crypt4gh: $(C4GH_HEADERS)
crypt4gh: main.o $(C4GH_OBJECTS)
	@echo "Linking objects into $@"
	@$(CC) $(CFLAGS) -o $@ $< $(LIBS) $(C4GH_OBJECTS)

crypt4gh-keygen: $(C4GH_HEADERS)
crypt4gh-keygen: keygen.o $(C4GH_OBJECTS)
	@echo "Linking objects into $@"
	@$(CC) $(CFLAGS) -o $@ $< $(LIBS) $(C4GH_OBJECTS)

%.o: %.c
ifdef DEBUG
	@echo "Compiling $< (debug: $(DEBUG))"
else
	@echo "Compiling $<"
endif
	@$(CC) $(CFLAGS) -c -o $@ $<

$(BINDIR):
	@echo "Creating bin dir: $(BINDIR)"
	@install -d $(BINDIR)

install: crypt4gh crypt4gh-keygen | $(BINDIR)
	@echo "Installing crypt4gh into $(BINDIR)"
	@install -m 700 crypt4gh $(BINDIR)
	@echo "Installing crypt4gh-keygen into $(BINDIR)"
	@install -m 700 crypt4gh-keygen $(BINDIR)

clean:
	-rm -f crypt4gh crypt4gh-keygen main.o keygen.o $(C4GH_OBJECTS)

cleandist: clean
	-rm -f Makefile
